html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{title}
        link(rel="stylesheet", href="/style.css")
    body
        include ./components/nav.pug
        .my-city
            .city-info
                ul.city-info-list
                    li
                        span.info-key MONEY:
                        span.info-value#money
                    li
                        span.info-key EXP:
                        span.info-value#exp
                    li
                        span.info-key LEVEL:
                        span.info-value#level

                    li
                        span.info-key BUILDINGS:
                        span.info-value#building

                    li
                        span.info-key EXPENSES:
                        span.info-value#expenses

                    li
                        span.info-key EARNINGS:
                        span.info-value#earnings

                    li
                        span.info-key ENERGY USED:
                        span.info-value#usedEnergy

                    li
                        span.info-key PRODUCED ENERGY:
                        span.info-value#producedEnergy

                    li
                        span.info-key PEOPLE:
                        span.info-value#people
                    li
                        span.logout-button LOGOUT

            .map
            include ./components/chunkInfo.pug
        .quests(style="display: none")
        .friends(style="display: none")
        .my-account(style="display: none")
        .help(style="display: none")

        script(src="/socket.io/socket.io.js")
        script(src="https://unpkg.com/axios/dist/axios.min.js", defer)
        script(src="/scripts/chunk.js")
        script(src="/scripts/setAsMarked.js")
        script(src="/services/api.service.js")
        script(src="/services/user.service.js")
        script(src="/socket.js")
        script(src="/scripts/nav.js")
        script(src="/auth/logout.js")
